{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "aadharsharma/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": "128"

        },
        {
            "name": "server",
            "image": "aadharsharma/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": "128"

        },
        {
            "name": "worker",
            "image": "aadharsharma/multi-worker",
            "essential": false,
            "memory": "128"

        },
        {
            "name": "nginx",
            "image": "aadharsharma/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            
            "links": [ "client","server"],
            "memory": "128"

        }
    ]
}